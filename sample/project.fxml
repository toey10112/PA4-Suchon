
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="box" prefHeight="440.0" prefWidth="679.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Pane id="pane " fx:id="pane" prefHeight="463.0" prefWidth="722.0">
         <children>
            <Label id="label" fx:id="label" layoutX="14.0" layoutY="36.0" prefHeight="50.0" prefWidth="155.0" text="File or URL name : ">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField  fx:id="address"  layoutX="169.0"  layoutY="43.0" prefHeight="35.0" prefWidth="264.0" />
            <Button fx:id="browseButton" id="browsebutton"  layoutX="445.0" layoutY="43.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="63.0" text="Browse" onAction="#handleBrowseButton" />
            <Button fx:id="countButton" id="countbutton" layoutX="518.0" layoutY="43.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="63.0" text="Count" onAction="#handleCountButton"/>
            <Button fx:id="clearButton" id="clearbutton" layoutX="591.0" layoutY="44.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="63.0" text="Clear" onAction="#handleClearButton"/>
         </children>
      </Pane>
      <TextArea fx:id="result" id="textarea" prefHeight="583.0" prefWidth="679.0" disable="true" />
   </children>
</VBox>
